<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

            <record model="ir.ui.view" id="view_test_observation_form">
                <field name="name">Test Observation Form View</field>
                <field name="model">test.observation</field>
                <field name="arch" type="xml">

                    <form string="Test Observation Form View">
                       <field name="val1" />
                       <field name="val2" />
                       
						<button name="save" type="object" string="Save"/>
                    </form>
                
                </field>
            </record>

            <record model="ir.actions.act_window" id="action_test_observation" >
                <field name="name">Test Observation</field>
                <field name="res_model">test.observation</field>
                <field name="view_type">form</field>
                <field name="view_mode">form</field>
                <field name="target">new</field>
            </record>           
            <record model="ir.actions.act_window.view" id="act_view_test_observation_form">
                <field eval="0" name="sequence"/>
                <field name="view_mode">form</field>
                <field name="view_id" ref="view_test_observation_form"/>
                <field name="act_window_id" ref="action_test_observation"/>
            </record> 
            
            <record model="ir.ui.view" id="view_patient_move_form">
                <field name="name">Patient Transfer Form</field>
                <field name="model">t4.clinical.patient.move</field>
                <field name="arch" type="xml">

                    <form string="Patient Transfer Form">
                       <field name="patient_id" />
                       <field name="src_location_id" />
					   <field name="dst_location_id" />  
					   <field name="reason" /> 	                     
                       
						<button name="save" type="object" string="Save"/>
                    </form>
                
                </field>
            </record>

            <record model="ir.actions.act_window" id="action_patient_move" >
                <field name="name">Patient Transfer</field>
                <field name="res_model">t4.clinical.patient.move</field>
                <field name="view_type">form</field>
                <field name="view_mode">form</field>
                <field name="target">new</field>
            </record>           
            <record model="ir.actions.act_window.view" id="act_view_patient_move">
                <field eval="0" name="sequence"/>
                <field name="view_mode">form</field>
                <field name="view_id" ref="view_patient_move_form"/>
                <field name="act_window_id" ref="action_patient_move"/>
            </record>                           
    </data>
</openerp>