<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <menuitem name="Demo Wizards"
                  sequence="99"
                  id="menu_t4ui_left_demo"
                  parent="t4clinical_base.menu_t4_clinical"
                  groups="t4clinical_base.group_t4clinical_ward_manager,t4clinical_base.group_t4clinical_hca,t4clinical_base.group_t4clinical_doctor,t4clinical_base.group_t4clinical_dev,base.user_root"/>

    
         <record model="ir.ui.view" id="view_t4clinical_demo_register_form">
            <field name="name">t4.clinical.demo.register.form</field>
            <field name="model">t4.clinical.demo.register</field>
            <field name="arch" type="xml">
                <form string="register">

					DOB<field name="dob"/>
					Sex<field name="sex"/>
					Family Name<field name="family_name"/>
					Given Name<field name="given_name"/>
					Gender<field name="gender"/>
					Other ID<field name="other_identifier"/>

                 	POS<field name="pos_id" string="POS"/>
					
					<button name="submit" string="Submit" type="object"/>
					
                </form>
            </field>
        </record>

        
        <record model="ir.actions.act_window" id="action_t4clinical_demo_register" >
            <field name="name">Register-Place</field>
            <field name="res_model">t4.clinical.demo.register</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_t4clinical_demo_register_form"/>
            <field name="target">new</field>
        </record>

        <menuitem name="Register"
                  id="menu_demo_register"
                  parent="menu_t4ui_left_demo"
                  action="action_t4clinical_demo_register"
                  groups="t4clinical_base.group_t4clinical_ward_manager,t4clinical_base.group_t4clinical_dev,base.user_root"/>    


         <record model="ir.ui.view" id="view_t4clinical_demo_discharge_form">
            <field name="name">t4.clinical.demo.discharge.form</field>
            <field name="model">t4.clinical.demo.discharge</field>
            <field name="arch" type="xml">
                <form string="Discharge">


					Other ID<field name="other_identifier" widget="char"/>
					Discharge Date<field name="discharge_date"/>
					
					<button name="submit" string="Submit" type="object"/>
					
                </form>
            </field>
        </record>

        
        <record model="ir.actions.act_window" id="action_t4clinical_demo_discharge" >
            <field name="name">Discharge</field>
            <field name="res_model">t4.clinical.demo.discharge</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_t4clinical_demo_discharge_form"/>
            <field name="target">new</field>
        </record>

        <menuitem name="Discharge"
                  id="menu_demo_discharge"
                  parent="menu_t4ui_left_demo"
                  action="action_t4clinical_demo_discharge"
                  groups="t4clinical_base.group_t4clinical_ward_manager,t4clinical_base.group_t4clinical_dev,base.user_root"/>



         <record model="ir.ui.view" id="view_t4clinical_demo_placement_form">
            <field name="name">t4.clinical.demo.placement.form</field>
            <field name="model">t4.clinical.demo.placement</field>
            <field name="arch" type="xml">
                <form string="Placement">

					DOB<field name="dob"/>
					Sex<field name="sex"/>
					Family Name<field name="family_name"/>
					Given Name<field name="given_name"/>
					Gender<field name="gender"/>
					Other ID<field name="other_identifier"/>

                 	POS<field name="pos_id" string="POS"/>
					Available Bed<field name="bed_location_id" domain="[('pos_id','=',pos_id), ('usage','=','bed')]"/>
					
					<button name="submit" string="Submit" type="object"/>
					
                </form>
            </field>
        </record>

        
        <record model="ir.actions.act_window" id="action_t4clinical_demo_placement" >
            <field name="name">Register-Place</field>
            <field name="res_model">t4.clinical.demo.placement</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_t4clinical_demo_placement_form"/>
            <field name="target">new</field>
        </record>

        <menuitem name="Register-Place"
                  id="menu_demo_register_place"
                  parent="menu_t4ui_left_demo"
                  action="action_t4clinical_demo_placement"
                  groups="t4clinical_base.group_t4clinical_ward_manager,t4clinical_base.group_t4clinical_dev,base.user_root"/>
                  
                  
         <record model="ir.ui.view" id="view_t4clinical_demo_user_form">
            <field name="name">t4.clinical.demo.user.form</field>
            <field name="model">t4.clinical.demo.user</field>
            <field name="arch" type="xml">
                <form string="User">
					Name<field name="name"/>
					Login<field name="login"/>
					Password<field name="password"/>
					Groups<field name="groups_id"/>
					POS<field name="pos_id"/>
					Locations<field name="location_ids"/>
					<button name="submit" string="Submit" type="object"/>
                </form>
            </field>
        </record>

        
        <record model="ir.actions.act_window" id="action_t4clinical_demo_user" >
            <field name="name">User</field>
            <field name="res_model">t4.clinical.demo.user</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_t4clinical_demo_user_form"/>
            <field name="target">new</field>
        </record>

        <menuitem name="User"
                  id="menu_demo_user"
                  parent="menu_t4ui_left_demo"
                  action="action_t4clinical_demo_user"
                  groups="t4clinical_base.group_t4clinical_ward_manager,t4clinical_base.group_t4clinical_dev,base.user_root"/>              

         <record model="ir.ui.view" id="view_t4clinical_demo_location_form">
            <field name="name">t4.clinical.demo.location.form</field>
            <field name="model">t4.clinical.demo.location</field>
            <field name="arch" type="xml">
                <form string="Location">
					Name<field name="name"/>
					Code<field name="code"/>
					Type<field name="type"/>
					Usage<field name="usage"/>
					Parent Location<field name="parent_id"/>
					<button name="submit" string="Submit" type="object"/>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_t4clinical_demo_location" >
            <field name="name">Location</field>
            <field name="res_model">t4.clinical.demo.location</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_t4clinical_demo_location_form"/>
            <field name="target">new</field>
        </record>

        <menuitem name="Location"
                  id="menu_demo_location"
                  parent="menu_t4ui_left_demo"
                  action="action_t4clinical_demo_location"
                  groups="t4clinical_base.group_t4clinical_ward_manager,t4clinical_base.group_t4clinical_dev,base.user_root"/> 
	</data>
</openerp>