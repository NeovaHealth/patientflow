<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

            <record model="ir.ui.view" id="view_t4_clinical_activity_search">
                <field name="name">T4 Clinical activity Search View</field>
                <field name="model">t4.clinical.activity</field>
                <field name="arch" type="xml">
                    <search string="T4 Clinical activity Search View">
                        <group expand="0" string="Group By...">
<!--                           <filter name="create_date" string="Ward" domain="[]" context="{'group_by':'create_date'}" help="Ward"/>
                          <filter name="create_uid" string="Ward" domain="[]" context="{'group_by':'create_uid'}" help="Ward"/> -->
                          <field name="parent_id" string="Parent activity" context="{'group_by':'parent_id'}"/>
<!--     					  <field name="location_id" string="Location"/> -->
                        </group>
                    </search>
                </field>
            </record>
            <record model="ir.ui.view" id="view_t4_clinical_activity_tree_hierarchy">
                <field name="name">T4 Clinical activity Tree View Hierarchy</field>
                <field name="model">t4.clinical.activity</field>
                <field name="field_parent">child_ids</field>
                <field name="arch" type="xml">
                    <tree string="T4 Clinical activity Tree View">
                       <field name="type_id" />
                       <field name="user_id" />
                       <field name="user_ids" />
<!--                        <field name="employee_id" />
                       <field name="employee_ids" /> -->
                       <field name="location_id" />
                       <field name="patient_id" />
                       <field name="date_scheduled" />
                       <field name="date_started" />
                       <field name="date_terminated" />
					   <field name="state" />
					   <field name="parent_id" />
					   <field name="pos_id" />
                    </tree>
                </field>
            </record>    
            <record model="ir.ui.view" id="view_t4_clinical_activity_tree">
                <field name="name">T4 Clinical activity Tree View</field>
                <field name="model">t4.clinical.activity</field>
                <field name="arch" type="xml">
                    <tree string="T4 Clinical activity Tree View">                    
                       <field name="type_id" />
                       <field name="user_id" />
                       <field name="user_ids" />
                       <field name="location_id" />
                       <field name="patient_id" />
                       <field name="date_scheduled" />
                       <field name="date_started" />
                       <field name="date_terminated" />
					   <field name="state" />
					   <field name="pos_id" />
					   
					   <field name="is_schedule_allowed" invisible="1"/>
					   <field name="is_start_allowed" invisible="1"/>
					   <field name="is_submit_allowed" invisible="1"/>
					   <field name="is_complete_allowed" invisible="1"/>
					   <field name="is_cancel_allowed" invisible="1"/>

               			<button name="schedule_act_window" type="object" string="Schedule" attrs="{'invisible': [('is_schedule_allowed','=',False)]}"/>
               			<button name="start_act_window" type="object" string="Start" attrs="{'invisible': [('is_start_allowed','=',False)]}"/>
           				<button name="submit_act_window" type="object" string="Submit" attrs="{'invisible': [('is_submit_allowed','=',False)]}"/>
           				<button name="complete_act_window" type="object" string="Complete" attrs="{'invisible': [('is_complete_allowed','=',False)]}"/>
           				<button name="cancel_act_window" type="object" string="Cancel" attrs="{'invisible': [('is_cancel_allowed','=',False)]}"/>   					   
                    </tree>
                </field>
            </record>              
            <record model="ir.ui.view" id="view_t4_clinical_activity_form">
                <field name="name">T4 Clinical activity Form View</field>
                <field name="model">t4.clinical.activity</field>
                <field name="arch" type="xml">
                    <form string="T4 Clinical activity Form View" version="7.0">
                      <header>        
					   <field name="is_schedule_allowed" invisible="1"/>
					   <field name="is_start_allowed" invisible="1"/>
					   <field name="is_submit_allowed" invisible="1"/>
					   <field name="is_complete_allowed" invisible="1"/>
					   <field name="is_cancel_allowed" invisible="1"/>

               			<button name="schedule_act_window" type="object" string="Schedule" attrs="{'invisible': [('is_schedule_allowed','=',False)]}"/>
               			<button name="start_act_window" type="object" string="Start" attrs="{'invisible': [('is_start_allowed','=',False)]}"/>
           				<button name="submit_act_window" type="object" string="Submit" attrs="{'invisible': [('is_submit_allowed','=',False)]}"/>
           				<button name="complete_act_window" type="object" string="Complete" attrs="{'invisible': [('is_complete_allowed','=',False)]}"/>
           				<button name="cancel_act_window" type="object" string="Cancel" attrs="{'invisible': [('is_cancel_allowed','=',False)]}"/>     
							
                    		<field name="state" widget="statusbar" statusbar_visible="draft,scheduled,started,completed,cancelled"/>
                      </header>
                      <sheet>
                      	    <group string="activity">
			                   <field name="create_date" />
		                       <field name="type_id" />
		                       <field name="user_id" />
<!-- 		                       <field name="employee_id" /> -->
		                       <field name="location_id" />
		                       <field name="patient_id" />
		                       <field name="date_deadline" />
		                       <field name="date_expiry" />
		                       <field name="date_planned" />
		                       <field name="date_scheduled" />
		                       <field name="date_started" />
		                       <field name="date_terminated" />
						   </group>                       
						</sheet>
                    </form>
                </field>
            </record>
            <!-- activity Tree -->
            <record model="ir.actions.act_window" id="action_t4_clinical_activity" >
                <field name="name">T4 Clinical activity Window Action</field>
                <field name="res_model">t4.clinical.activity</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree,form</field>
                <field name="search_view_id" ref="view_t4_clinical_activity_search"/>               
            </record>
            <record model="ir.actions.act_window.view" id="act_view_t4_clinical_activity_tree">
                <field eval="0" name="sequence"/>
                <field name="view_mode">tree</field>
                <field name="view_id" ref="view_t4_clinical_activity_tree"/>
                <field name="act_window_id" ref="action_t4_clinical_activity"/>                
            </record>
            <record model="ir.actions.act_window.view" id="act_view_t4_clinical_activity_form">
                <field eval="1" name="sequence"/>
                <field name="view_mode">form</field>
                <field name="view_id" ref="view_t4_clinical_activity_form"/>
                <field name="act_window_id" ref="action_t4_clinical_activity"/>
            </record>
            <!-- activity Hierarchy -->
            <record model="ir.actions.act_window" id="action_t4_clinical_activity_hierarchy" >
                <field name="name">T4 Clinical activity Window Action</field>
                <field name="res_model">t4.clinical.activity</field>
	            <field name="view_type">tree</field>
	            <field name="view_id" ref="view_t4_clinical_activity_tree_hierarchy"/>
	            <field name="domain">[('parent_id','=',False)]</field>                
            </record>
<!--             <record model="ir.actions.act_window.view" id="act_view_t4_clinical_activity_tree_hierarchy">
                <field eval="0" name="sequence"/>
                <field name="view_mode">tree</field>
                <field name="view_id" ref="view_t4_clinical_activity_tree"/>
                <field name="act_window_id" ref="action_t4_clinical_activity"/>
            </record>
            <record model="ir.actions.act_window.view" id="act_view_t4_clinical_activity_form">
                <field eval="1" name="sequence"/>
                <field name="view_mode">form</field>
                <field name="view_id" ref="view_t4_clinical_activity_form"/>
                <field name="act_window_id" ref="action_t4_clinical_activity"/>
            </record>   -->         

        <!-- Activity Workload Kanban View -->
       <record model="ir.ui.view" id="view_activity_workload_kanban">
            <field name="name">t4.clinical.activity.workload.kanban</field>
            <field name="model">t4.clinical.activity</field>
            <field name="arch" type="xml">
                <kanban default_group_by="proximity_interval" edit="false" quick_create="false" create="false">
                    <field name="proximity_interval"/>
                    <field name="summary"/>
                    <field name="state"/>
                    <field name="user_id"/>
                    <field name="user_ids"/>
                    <field name="patient_id"/>
                    <field name="location_id"/>
                    <field name="date_scheduled"/>
                    <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div><b><field name="summary"/></b></div>
                                <div>
                                    <field name="parent_id"/><br/>
                                    <t t-if="record.date_scheduled.raw_value and record.date_scheduled.raw_value lt (new Date())" t-set="red">oe_kanban_text_red</t>
                                    <span t-attf-class="#{red || ''}"><i><field name="date_scheduled"/></i></span>
                                </div>
                                <div class="oe_kanban_footer_left">
<!--                                     <span groups="project.group_time_work_estimation_tasks" title="Remaining hours">
                                        <span class="oe_e">N</span>
                                        <t t-esc="Math.round(record.remaining_hours.raw_value)"/>
                                    </span> -->
                                </div>
                                <div class="oe_kanban_footer_left" style="margin-top:5px;">
				                    <field name="state"/>
				                    <field name="user_id"/>
				                    <field name="user_ids"/>
				                    <field name="patient_id"/>
				                    <field name="location_id"/>
				                    <field name="date_scheduled"/>
				                    <field name="proximity_interval"/>
                                </div>
                            </div>
                            <div class="oe_clear"></div>
                        </div>
                    </t>
                    </templates>
                </kanban>
            </field>
         </record>

        <record id="view_activity_workload_search" model="ir.ui.view">
            <field name="name">t4.clinical.activity.workload.search</field>
            <field name="model">t4.clinical.activity</field>
            <field name="arch" type="xml">
               <search string="Activity">
                    <field name="summary"/>
                    <filter string="NEWS Observations Only" name="obsrvations_news"
                    	domain="[('data_model','in',['t4.clinical.patient.observation.ews'])]"/>
                    <separator/>
                    <group expand="0" string="Group By...">

                    </group>
                </search>
            </field>
        </record>     
        <record model="ir.actions.act_window" id="act_activity_workload_kanban">
            <field name="name">Activity Workload</field>
            <field name="res_model">t4.clinical.activity</field>
            <field name="view_mode">kanban</field>
			<field name="domain">[['date_scheduled','!=',False],['state','not in',['cancelled','done']]]</field>
              <field name="search_view_id" ref="view_activity_workload_search"/>
        </record>  
        <record model="ir.actions.act_window.view" id="act_activity_workload_kanban_view">
            <field eval="0" name="sequence"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="view_activity_workload_kanban"/>
            <field name="act_window_id" ref="act_activity_workload_kanban"/>
        </record>        
     </data>
</openerp>