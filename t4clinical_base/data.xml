<?xml version="1.0"?>
<openerp>
	<data>
		<!-- Recurrence Scheduler -->
        <record model="ir.cron" id="t4_clinical_task_recurrence_cron">
            <field name="name">Task Recurrence</field>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model" eval="'t4.clinical.task.recurrence'"/>
            <field name="function" eval="'cron'"/>
            <field name="args" eval="'()'" />
        </record>	
<!-- Model category -->
        <record model="ir.module.category" id="module_category_t4clinical">
            <field name="name">T4 Clinical</field>
            <field name="description">Clinical application by Tactix4</field>
            <field name="sequence">5</field>
        </record>
<!-- Groups -->
        <record id="group_t4clinical_base" model="res.groups">
            <field name="name">T4 Clinical Base Group</field>
            <field name="category_id" ref="module_category_t4clinical"/>
        </record>
        <record id="group_t4clinical_hca" model="res.groups">
            <field name="name">T4 Clinical HCA Group</field>
            <field name="category_id" ref="module_category_t4clinical"/>
            <field name="implied_ids" eval="[(4, ref('group_t4clinical_base'))]"/>
        </record>
        <record id="group_t4clinical_nurse" model="res.groups">
            <field name="name">T4 Clinical Nurse Group</field>
            <field name="category_id" ref="module_category_t4clinical"/>
            <field name="implied_ids" eval="[(4, ref('group_t4clinical_base'))]"/>            
        </record>
        <record id="group_t4clinical_doctor" model="res.groups">
            <field name="name">T4 Clinical Doctor Group</field>
            <field name="category_id" ref="module_category_t4clinical"/>
            <field name="implied_ids" eval="[(4, ref('group_t4clinical_base'))]"/>            
        </record>
        <record id="group_t4clinical_ward_manager" model="res.groups">
            <field name="name">T4 Clinical Ward Manager Group</field>
            <field name="category_id" ref="module_category_t4clinical"/>
            <field name="implied_ids" eval="[(4, ref('group_t4clinical_base'))]"/>            
        </record>
        <record id="group_t4clinical_admin" model="res.groups">
            <field name="name">T4 Clinical Admin Group</field>
            <field name="category_id" ref="module_category_t4clinical"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="implied_ids" eval="[(4, ref('group_t4clinical_base'))]"/>            
        </record>
        <record id="group_t4clinical_dev" model="res.groups">
            <field name="name">T4 Clinical Developer Group</field>
            <field name="category_id" ref="module_category_t4clinical"/>
            <field name="implied_ids" eval="[(4, ref('group_t4clinical_base'))]"/>            
        </record>
        <record id="group_t4clinical_adt" model="res.groups">
            <field name="name">T4 Clinical ADT Group</field>
            <field name="category_id" ref="module_category_t4clinical"/>
            <field name="implied_ids" eval="[(4, ref('group_t4clinical_base'))]"/>            
        </record>
<!-- Record Rules -->
        <record model="ir.rule" id="t4clinical_rule_user_task">
            <field name="name">T4 Clinical User-Task Rule</field>
            <field name="model_id" ref="model_t4_clinical_task"/>
            <field name="domain_force">[('user_ids','in',user.id)]</field>
            <field name="groups" eval="[(4, ref('group_t4clinical_hca')), 
            							(4, ref('group_t4clinical_nurse')), 
            							(4, ref('group_t4clinical_doctor')),
            							(4, ref('group_t4clinical_ward_manager'))]"/>
        </record>                
<!-- Partner title -->
        <record id="partner_title_t4clinical_mr" model="res.partner.title">
            <field name="name">Mr</field>
            <field name="shortcut">Mr</field>
            <field name="domain">partner</field>
        </record>
        
<!-- Employee Categories -->
        <record id="employee_category_t4clinical_hca" model="hr.employee.category">
            <field name="name">HCA</field>
        </record>
        <record id="employee_category_t4clinical_nurse" model="hr.employee.category">
            <field name="name">Nurse</field>
        </record>
        <record id="employee_category_t4clinical_doctor" model="hr.employee.category">
            <field name="name">Doctor</field>
        </record>
        <record id="employee_category_t4clinical_ward_manager" model="hr.employee.category">
            <field name="name">Ward Manager</field>
        </record> 
        
	</data>
</openerp>