<?xml version="1.0"?>
<openerp>
	<data>
		<record model="t4.clinical.task.type" id="t4c_aw_test_observation">
			<field name="summary">Test Observation</field>
			<field name="data_model">test.observation</field>
			<field name="act_window_xmlid">action_test_observation</field>
		</record>
		<record model="t4.clinical.task.type" id="t4c_aw_test_observation2">
			<field name="summary">Test type of task</field>
			<field name="data_model">test.observation2</field>
<!--			<field name="act_window_xmlid">action_test_observation</field-->
			<field name="parent_rule">[]</field>
			<field name="children_rule">[('model','in',['test.observation'])]</field>
		</record>	
		<record model="t4.clinical.task.type" id="t4c_aw_patient_move">
			<field name="summary">Patient Transfer</field>
			<field name="data_model">t4.clinical.patient.move</field>
			<field name="act_window_xmlid">action_patient_move</field>
			<field name="parent_rule">[]</field>
			<field name="children_rule">[]</field>
		</record>
		
		<record model="t4.clinical.location" id="location_reception_in">
			<field name="code">Vitrual Reception IN</field>
			<field name="type">virtual</field>
		</record>
		<record model="t4.clinical.location" id="location_reception_out">
			<field name="code">Vitrual Reception OUT</field>
			<field name="type">virtual</field>
		</record>
		<record model="t4.clinical.location" id="location_pos">
			<field name="code">POS Internal</field>
			<field name="type">structural</field>
			<field name="usage">pos</field>
		</record>			
		<record model="t4.clinical.location" id="location_ward1">
			<field name="code">ward1</field>
			<field name="type">structural</field>
			<field name="usage">ward</field>
			<field name="location_id" ref="location_pos"/>		
		</record>	
		<record model="t4.clinical.location" id="location_ward2">
			<field name="code">ward2</field>
			<field name="type">structural</field>
			<field name="usage">ward</field>
			<field name="location_id" ref="location_pos"/>
		</record>
		<record model="t4.clinical.location" id="location_ward1_bed1">
			<field name="code">bed1</field>
			<field name="type">poc</field>
			<field name="usage">bed</field>		
			<field name="location_id" ref="location_ward1"/>	
		</record>
        <record model="ir.cron" id="t4_clinical_task_recurrence_cron">
            <field name="name">Task Recurrence</field>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model" eval="'t4.clinical.task.recurrence'"/>
            <field name="function" eval="'cron'"/>
            <field name="args" eval="'()'" />
        </record>		
		<record model="t4.clinical.task.recurrence" id="test_recurrence">
			<field name="date_start">2014-02-18</field>
			<field name="unit">minute</field>
			<field name="unit_qty">1</field>
		</record>	        								
	</data>
</openerp>
