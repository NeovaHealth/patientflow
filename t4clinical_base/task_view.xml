<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

            <record model="ir.ui.view" id="view_t4_clinical_task_search">
                <field name="name">T4 Clinical Task Search View</field>
                <field name="model">t4.clinical.task</field>
                <field name="arch" type="xml">
                    <search string="T4 Clinical Task Search View">
                        <group expand="0" string="Group By...">
<!--                           <filter name="create_date" string="Ward" domain="[]" context="{'group_by':'create_date'}" help="Ward"/>
                          <filter name="create_uid" string="Ward" domain="[]" context="{'group_by':'create_uid'}" help="Ward"/> -->
                          <field name="parent_id" string="Parent Task" context="{'group_by':'parent_id'}"/>
<!--     					  <field name="location_id" string="Location"/> -->
                        </group>
                    </search>
                </field>
            </record>
            <record model="ir.ui.view" id="view_t4_clinical_task_tree_hierarchy">
                <field name="name">T4 Clinical Task Tree View Hierarchy</field>
                <field name="model">t4.clinical.task</field>
                <field name="field_parent">child_ids</field>
                <field name="arch" type="xml">
                    <tree string="T4 Clinical Task Tree View">
                       <field name="type_id" />
                       <field name="user_id" />
                       <field name="user_ids" />
<!--                        <field name="employee_id" />
                       <field name="employee_ids" /> -->
                       <field name="location_id" />
                       <field name="patient_id" />
                       <field name="date_scheduled" />
                       <field name="date_started" />
                       <field name="date_terminated" />
					   <field name="state" />
					   <field name="parent_id" />
					   <field name="pos_id" />
                    </tree>
                </field>
            </record>    
            <record model="ir.ui.view" id="view_t4_clinical_task_tree">
                <field name="name">T4 Clinical Task Tree View</field>
                <field name="model">t4.clinical.task</field>
                <field name="arch" type="xml">
                    <tree string="T4 Clinical Task Tree View">                    
                       <field name="type_id" />
                       <field name="user_id" />
                       <field name="user_ids" />
                       <field name="location_id" />
                       <field name="patient_id" />
                       <field name="date_scheduled" />
                       <field name="date_started" />
                       <field name="date_terminated" />
					   <field name="state" />
					   <field name="pos_id" />
					   
					   <field name="is_schedule_allowed" invisible="1"/>
					   <field name="is_start_allowed" invisible="1"/>
					   <field name="is_submit_allowed" invisible="1"/>
					   <field name="is_complete_allowed" invisible="1"/>
					   <field name="is_cancel_allowed" invisible="1"/>

               			<button name="schedule_act_window" type="object" string="Schedule" attrs="{'invisible': [('is_schedule_allowed','=',False)]}"/>
               			<button name="start_act_window" type="object" string="Start" attrs="{'invisible': [('is_start_allowed','=',False)]}"/>
           				<button name="submit_act_window" type="object" string="Submit" attrs="{'invisible': [('is_submit_allowed','=',False)]}"/>
           				<button name="complete_act_window" type="object" string="Complete" attrs="{'invisible': [('is_complete_allowed','=',False)]}"/>
           				<button name="cancel_act_window" type="object" string="Cancel" attrs="{'invisible': [('is_cancel_allowed','=',False)]}"/>   					   
                    </tree>
                </field>
            </record>              
            <record model="ir.ui.view" id="view_t4_clinical_task_form">
                <field name="name">T4 Clinical Task Form View</field>
                <field name="model">t4.clinical.task</field>
                <field name="arch" type="xml">
                    <form string="T4 Clinical Task Form View" version="7.0">
                      <header>        
					   <field name="is_schedule_allowed" invisible="1"/>
					   <field name="is_start_allowed" invisible="1"/>
					   <field name="is_submit_allowed" invisible="1"/>
					   <field name="is_complete_allowed" invisible="1"/>
					   <field name="is_cancel_allowed" invisible="1"/>

               			<button name="schedule_act_window" type="object" string="Schedule" attrs="{'invisible': [('is_schedule_allowed','=',False)]}"/>
               			<button name="start_act_window" type="object" string="Start" attrs="{'invisible': [('is_start_allowed','=',False)]}"/>
           				<button name="submit_act_window" type="object" string="Submit" attrs="{'invisible': [('is_submit_allowed','=',False)]}"/>
           				<button name="complete_act_window" type="object" string="Complete" attrs="{'invisible': [('is_complete_allowed','=',False)]}"/>
           				<button name="cancel_act_window" type="object" string="Cancel" attrs="{'invisible': [('is_cancel_allowed','=',False)]}"/>     
							
                    		<field name="state" widget="statusbar" statusbar_visible="draft,scheduled,started,completed,cancelled"/>
                      </header>
                      <sheet>
                      	    <group string="Task">
			                   <field name="create_date" />
		                       <field name="type_id" />
		                       <field name="user_id" />
<!-- 		                       <field name="employee_id" /> -->
		                       <field name="location_id" />
		                       <field name="patient_id" />
		                       <field name="date_deadline" />
		                       <field name="date_expiry" />
		                       <field name="date_planned" />
		                       <field name="date_scheduled" />
		                       <field name="date_started" />
		                       <field name="date_terminated" />
						   </group>                       
						</sheet>
                    </form>
                </field>
            </record>
            <!-- Task Tree -->
            <record model="ir.actions.act_window" id="action_t4_clinical_task" >
                <field name="name">T4 Clinical Task Window Action</field>
                <field name="res_model">t4.clinical.task</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree,form</field>
                <field name="search_view_id" ref="view_t4_clinical_task_search"/>               
            </record>
            <record model="ir.actions.act_window.view" id="act_view_t4_clinical_task_tree">
                <field eval="0" name="sequence"/>
                <field name="view_mode">tree</field>
                <field name="view_id" ref="view_t4_clinical_task_tree"/>
                <field name="act_window_id" ref="action_t4_clinical_task"/>                
            </record>
            <record model="ir.actions.act_window.view" id="act_view_t4_clinical_task_form">
                <field eval="1" name="sequence"/>
                <field name="view_mode">form</field>
                <field name="view_id" ref="view_t4_clinical_task_form"/>
                <field name="act_window_id" ref="action_t4_clinical_task"/>
            </record>
            <!-- Task Hierarchy -->
            <record model="ir.actions.act_window" id="action_t4_clinical_task_hierarchy" >
                <field name="name">T4 Clinical Task Window Action</field>
                <field name="res_model">t4.clinical.task</field>
	            <field name="view_type">tree</field>
	            <field name="view_id" ref="view_t4_clinical_task_tree_hierarchy"/>
	            <field name="domain">[('parent_id','=',False)]</field>                
            </record>
<!--             <record model="ir.actions.act_window.view" id="act_view_t4_clinical_task_tree_hierarchy">
                <field eval="0" name="sequence"/>
                <field name="view_mode">tree</field>
                <field name="view_id" ref="view_t4_clinical_task_tree"/>
                <field name="act_window_id" ref="action_t4_clinical_task"/>
            </record>
            <record model="ir.actions.act_window.view" id="act_view_t4_clinical_task_form">
                <field eval="1" name="sequence"/>
                <field name="view_mode">form</field>
                <field name="view_id" ref="view_t4_clinical_task_form"/>
                <field name="act_window_id" ref="action_t4_clinical_task"/>
            </record>   -->          
     </data>
</openerp>