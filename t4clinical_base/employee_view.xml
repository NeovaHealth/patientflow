<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
            <record model="ir.ui.view" id="view_employee_search">
                <field name="name">employee Search View</field>
                <field name="model">hr.employee</field>
                <field name="arch" type="xml">
                    <search string="employee Search View">
                        <group expand="1" string="Group By...">
                          <filter name="name" string="Name" domain="[]" context="{'group_by':'name'}" help="Name"/>
                        </group>
                    </search>
                </field>
            </record>
            <record model="ir.ui.view" id="view_employee_tree">
                <field name="name">employee Tree View</field>
                <field name="model">hr.employee</field>
                <field name="arch" type="xml">
                    <tree string="employee Tree View">
                       <field name="name" />
                       <field name="location_ids" />
                    </tree>
                </field>
            </record>    
            <record model="ir.ui.view" id="view_employee_form">
                <field name="name">employee Form View</field>
                <field name="model">hr.employee</field>
                <field name="arch" type="xml">
                    <form string="employee Form View">
                       <field name="name" />
                       <field name="location_ids" />                    
                    </form>
                </field>
            </record>
            <record model="ir.actions.act_window" id="action_employee" >
                <field name="name">hr.employee</field>
                <field name="res_model">hr.employee</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree,form</field>
                <field name="search_view_id" ref="view_employee_search"/>
            </record>
            <record model="ir.actions.act_window.view" id="act_view_employee_tree">
                <field eval="0" name="sequence"/>
                <field name="view_mode">tree</field>
                <field name="view_id" ref="view_employee_tree"/>
                <field name="act_window_id" ref="action_employee"/>
            </record>
            <record model="ir.actions.act_window.view" id="act_view_employee_form">
                <field eval="1" name="sequence"/>
                <field name="view_mode">form</field>
                <field name="view_id" ref="view_employee_form"/>
                <field name="act_window_id" ref="action_employee"/>
            </record>
          <menuitem name="Base" id="menu_left_base" parent="t4clinical_base.menu_t4_clinical" action=""/>
          <menuitem name="employee" id="menu_left_sub_employee" parent="menu_left_base" action="action_employee"/>
    </data>
</openerp>