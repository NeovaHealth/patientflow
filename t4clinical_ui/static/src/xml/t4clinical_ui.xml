<templates>

    <t t-extend="UserMenu">
        <t t-jquery=".dropdown-menu" t-operation="replace">
            <ul class="dropdown-menu">
                <li><a href="#" data-menu="settings">Preferences</a></li>
                <li><a href="#" data-menu="about">About Odoo</a></li>
                <li><a href="#" data-menu="help">Help</a></li>
                <li><a href="#" data-menu="logout">Log out</a></li>
            </ul>
        </t>
    </t>

    <button t-name="t4.ListView.row.button" type="button" t-att-title="widget.string" t-att-disabled="disabled || undefined"
            t-att-class="disabled ? 'oe_list_button_disabled' : undefined">
        <img t-if="widget.t4_icon" t-attf-src="#{prefix}/t4clinical_ui/static/src/img/icons/#{widget.t4_icon}.png" t-att-alt="widget.string"/>
        <img t-if="widget.icon" t-attf-src="#{prefix}/web/static/src/img/icons/#{widget.icon}.png" t-att-alt="widget.string"/>
    </button>

    <button t-name="t4.ListView.row.act_button" type="button" t-att-title="widget.string" t-att-disabled="disabled || undefined"
            t-att-class="disabled ? 'oe_list_button_disabled' : undefined">
        <img t-if="active" t-attf-src="#{prefix}/t4clinical_ui/static/src/img/icons/times.png" t-att-alt="widget.string"/>
        <img t-if="inactive" t-attf-src="#{prefix}/t4clinical_ui/static/src/img/icons/check.png" t-att-alt="widget.string"/>
    </button>

    <t t-name="t4_maleCell"
        ><img t-attf-src="#{prefix}/t4clinical_ui/static/src/img/icons/male.png" t-att-alt="widget.string"/>
    </t>

    <t t-name="t4_femaleCell"
        ><img t-attf-src="#{prefix}/t4clinical_ui/static/src/img/icons/female.png" t-att-alt="widget.string"/>
    </t>

    <t t-name="t4_genderCell"
        ><img t-if="male" t-attf-src="#{prefix}/t4clinical_ui/static/src/img/icons/male.png" t-att-alt="widget.string"/>
        <img t-if="female" t-attf-src="#{prefix}/t4clinical_ui/static/src/img/icons/female.png" t-att-alt="widget.string"/>
    </t>

    <t t-name="t4_trendCell"
        ><img t-if="up" t-attf-src="#{prefix}/t4clinical_ui/static/src/img/icons/level-up.png" t-att-alt="widget.string"/>
        <img t-if="down" t-attf-src="#{prefix}/t4clinical_ui/static/src/img/icons/level-down.png" t-att-alt="widget.string"/>
        <img t-if="same" t-attf-src="#{prefix}/t4clinical_ui/static/src/img/icons/level-same.png" t-att-alt="widget.string"/>
    </t>

    <div t-name="t4_ewschart" class="t4_ewschart">
        <h3 id="chartTitle">Score</h3>
        <div id="contextChart" class="chart"></div>
        <h3 id="focusTitle">Individual values</h3>
        <div id="focusChart" class="chart"></div>
        <div class="table-wrapper" id="the_unplottables" style="position:relative;">
            <h3>Tabular values</h3>
            <div class="table-wrapper" style="width: 91.5%; overflow: auto;">
                <table id="chartTable" style="width: 100%;"></table>
            </div>
        </div>
    </div>

    <div t-name="t4_bschart" class="t4_ewschart">
        <h3 id="chartTitle">Blood Sugar</h3>
        <div id="focusChart" class="chart"></div>
    </div>

    <div t-name="t4_weightchart" class="t4_ewschart">
        <h3 id="chartTitle">Weight</h3>
        <div id="focusChart" class="chart"></div>
    </div>

</templates>