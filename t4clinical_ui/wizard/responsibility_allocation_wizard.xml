<openerp>
    <data>
        <record id="view_t4clinical_responsibility_allocation_wizard" model="ir.ui.view">
            <field name="name">Responsibility Allocation Wizard Form</field>
            <field name="model">t4.clinical.responsibility.allocation</field>
            <field name="arch" type="xml">
                <form string="Responsibility Allocation Wizard" class="oe_form_configuration" version="7.0">
                    <group>
                        <field name="user_id" widget="t4c_many2one" required="1"/>
                    </group>
                    <group>
                        <field name="location_ids" nolabel="1" options="{'no_create': True}"/>
                    </group>
                    <footer>
                        <button string="Submit" type="object" name="submit" class="oe_highlight"/>
                        <button string="Close" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_t4c_responsibility_allocation" model="ir.actions.act_window">
            <field name="name">User Responsibility Allocation</field>
            <field name="res_model">t4.clinical.responsibility.allocation</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</openerp>