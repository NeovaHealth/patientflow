<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
            <record model="ir.ui.view" id="view_activity_recurrence_search">
                <field name="name">activity Recurrence Search View</field>
                <field name="model">t4.clinical.activity.recurrence</field>
                <field name="arch" type="xml">
                    <search string="activity Recurrence Search View">
                        <group expand="1" string="Group By...">
                          <filter name="name" string="Name" domain="[]" context="{'group_by':'name'}" help="Name"/>
                        </group>
                    </search>
                </field>
            </record>
            <record model="ir.ui.view" id="view_activity_recurrence_tree">
                <field name="name">activity Recurrence Tree View</field>
                <field name="model">t4.clinical.activity.recurrence</field>
                <field name="arch" type="xml">
                    <tree string="activity Recurrence Tree View">
                       <field name="name" />
                       <field name="vals_activity" />
                       <field name="vals_data" />
                       <field name="date_start" />
                       <field name="date_finish" />
                       <field name="qty2gen" />
                       <field name="active" />
                       <field name="unit" />
                       <field name="unit_qty" />
                       <field name="date_next" />
                       <field name="activity_ids" />
                    </tree>
                </field>
            </record>    
            <record model="ir.ui.view" id="view_activity_recurrence_form">
                <field name="name">activity Recurrence Form View</field>
                <field name="model">t4.clinical.activity.recurrence</field>
                <field name="arch" type="xml">
                    <form string="activity Recurrence Form View">
                       <field name="name" />
                       <field name="vals_activity" />
                       <field name="vals_data" />
                       <field name="date_start" />
                       <field name="date_finish" />
                       <field name="qty2gen" />
                       <field name="active" />
                       <field name="unit" />
                       <field name="unit_qty" />
                       <field name="date_next" />
                       <field name="activity_ids" />                    
                    </form>
                </field>
            </record>
            <record model="ir.actions.act_window" id="action_activity_recurrence" >
                <field name="name">t4.clinical.activity.recurrence</field>
                <field name="res_model">t4.clinical.activity.recurrence</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree,form</field>
                <field name="search_view_id" ref="view_activity_recurrence_search"/>
            </record>
            <record model="ir.actions.act_window.view" id="act_view_activity_recurrence_tree">
                <field eval="0" name="sequence"/>
                <field name="view_mode">tree</field>
                <field name="view_id" ref="view_activity_recurrence_tree"/>
                <field name="act_window_id" ref="action_activity_recurrence"/>
            </record>
            <record model="ir.actions.act_window.view" id="act_view_activity_recurrence_form">
                <field eval="1" name="sequence"/>
                <field name="view_mode">form</field>
                <field name="view_id" ref="view_activity_recurrence_form"/>
                <field name="act_window_id" ref="action_activity_recurrence"/>
            </record>
    </data>
</openerp>