<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_t4clinical_patient_events_wizard" model="ir.ui.view">
            <field name="name">Create Patient through API</field>
            <field name="model">t4clinical.patient.events.wizard</field>
            <field name="arch" type="xml">
                <form string="Patient API Simulation" class= "oe_form_configuration" version="7.0">
                    <group string="Patient Details">
                        <field name="other_identifier"/>
                        <field name="patient_identifier"/>
                        <field name="given_name"/>
                        <field name="middle_names"/>
                        <field name="family_name"/>
                        <field name="dob"/>
                        <field name="sex"/>
                        <field name="gender"/>
                        <button string="Call patientNew" type="object" name="call_patientNew" class="oe_highlight"/>
                    </group>
                    <group string="Patient Visit Details">
                        <field name="visit_ref"/>
                        <field name="visit_no"/>
                        <field name="visit_start"/>
                        <button string="Call patientVisit" type="object" name="call_patientVisit" class="oe_highlight"/>
                    </group>
                    <footer>
                        <button string="Call Both API Calls" type="object" name="call_both" class="oe_highlight"/>
                        <button string="Close" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_t4clinical_patient_events" model="ir.actions.act_window">
            <field name="name">Patient API Events (ADT)</field>
            <field name="res_model">t4clinical.patient.events.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <menuitem name="T4Clinical API" id="menu_t4clinical_api" parent="t4clinical_base.menu_t4_clinical"/>
        <menuitem id="menu_t4clinical_patient_events_wizard" name="Enter Patient Events" parent="menu_t4clinical_api"
                  sequence="19" action="action_t4clinical_patient_events"/>
    </data>
</openerp>